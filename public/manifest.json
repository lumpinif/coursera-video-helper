{
  "manifest_version": 3,
  "name": "Coursera Video Helper",
  "version": "0.2.1",
  "description": "Enhance your Coursera learning experience with useful tools",
  "permissions": ["clipboardWrite", "activeTab"],
  "host_permissions": ["https://*.coursera.org/*"],
  "content_scripts": [
    {
      "matches": ["https://*.coursera.org/*"],
      "js": ["content/index.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/extension_icon@16px.png",
      "48": "icons/extension_icon@48px.png",
      "128": "icons/extension_icon@128px.png"
    }
  },
  "icons": {
    "16": "icons/extension_icon@16px.png",
    "48": "icons/extension_icon@48px.png",
    "128": "icons/extension_icon@128px.png"
  }
}
