{
  "name": "coursera-copilot",
  "version": "0.1.0",
  "description": "Chrome extension to enhance Coursera learning experience",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run webpack --watch --config webpack.dev.js",
    "build": "NODE_ENV=production bun run webpack --config webpack.prod.js",
    "test": "bun test",
    "lint": "bun run eslint 'src/**/*.{js,ts,tsx}' --fix",
    "format": "bun run prettier --write 'src/**/*.{js,ts,tsx,json,css,scss,md}'",
    "prepare": "husky && husky install",
    "lint-staged": "lint-staged",
    "lint:md": "bunx --bun markdownlint-cli2 --config .markdownlint-cli2.jsonc --fix"
  },
  "lint-staged": {
    "*.md": "bun run lint:md"
  },
  "keywords": [
    "chrome-extension",
    "coursera",
    "typescript",
    "react"
  ],
  "author": "@lumpinif",
  "license": "MIT",
  "dependencies": {
    "markdownlint": "^0.36.1",
    "markdownlint-cli2": "^0.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.20",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  }
}
